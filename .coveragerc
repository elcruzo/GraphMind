[run]
# Coverage.py configuration

source = src
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */env/*
    */.env/*
    setup.py
    */migrations/*

[report]
# Reporting
exclude_lines =
    # Standard pragma
    pragma: no cover
    
    # Debug-only code
    def __repr__
    def __str__
    
    # Defensive programming
    raise AssertionError
    raise NotImplementedError
    
    # Non-runnable code
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstract
    
    # Hard to test
    except ImportError
    except KeyError
    except FileNotFoundError

ignore_errors = True
skip_empty = True
precision = 2

[html]
directory = htmlcov

[xml]
output = coverage.xml